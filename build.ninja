##
# Final Target
target = .dragon/_/Library/MobileSubstrate/DynamicLibraries/Folded.dylib
builddir = .dragon/build
objdir = .dragon/obj
signdir = .dragon/sign
signtarget = $signdir/_/Library/MobileSubstrate/DynamicLibraries/Folded.unsigned
dsymtarget = $signdir/_/Library/MobileSubstrate/DynamicLibraries/Folded.nosym
prefix = Prefix.pch
# We use theos for include headers. You can specify any directory that has the /include/ subdirectory we need. 
theosdir = $$DRAGONBUILD

ccloc = $${ToolchainPath}$${ToolchainPrefix}clang++
cc = $ccloc
ll = $ccloc

optim = 2
iosvers = 11.0
arc = -fobjc-arc
archs = armv7 arm64 arm64e
lf = -lobjc -lc++ -lsubstrate 
sdk = $$DRAGONBUILD/sdks/iPhoneOS.sdk
buildtarg = -DTARGET_IPHONE=1 
frameworks = CoreFoundation Foundation UIKit CoreGraphics QuartzCore CoreImage AudioToolbox 
cflags = -Wall -mios-version-min=$iosvers -I$$PWD -isysroot "$sdk" -iframework$sdk/System/Library/Frameworks -fcolor-diagnostics -O3 -Wall -ggdb -DDEBUG -fobjc-arc
modules = -fmodules -fcxx-modules -fmodule-name=Folded -fbuild-session-file=.dragon/modules/ -fmodules-prune-after=345600 -fmodules-prune-interval=86400 -fmodules-validate-once-per-build-session
lflags = -dynamiclib -ggdb -lsystem.b -L$$DRAGONBUILD/lib -Xlinker -segalign -Xlinker 4000 

pre = fwk=$$(echo "$frameworks" | sed '/^$$/!s/[^ ]* */-framework &/g');arcs=$$(echo "$archs" | sed '/^$$/!s/[^ ]* */-arch &/g');

rule logos 
    description = Processing $in with Logos 
    command = $theosdir/bin/logos2.pl $in > $out

rule lint
    description = Linting $in
    command = oclint $in -- $ccloc $pre $cflags -objective-c -c -I$theosdir/include -I$theosdir/vendor/include -I$theosdir/include/_fallback $buildtarg $arc $$arcs -F$$DRAGONBUILD/lib

rule prefix
    description = Compiling $in
    command = $pre clang $cflags -objective-c -c -I$theosdir/include -I$theosdir/vendor/include -I$theosdir/include/_fallback $buildtarg $$arcs -F$sdk -emit-pch $in -o $out

rule compile 
    description = Compiling $in
    command = $pre $cc $cflags $modules -objective-c -c $compfl -I$theosdir/include -I$theosdir/vendor/include -I$theosdir/include/_fallback $buildtarg $$arcs -F$sdk/System/Library/PrivateFrameworks $in -o $out

rule link
    description = Linking Folded
    command = $pre $ll $lf $lflags -F$sdk $cflags $$fwk $$arcs -I$theosdir/include -I$theosdir/vendor/include -I$theosdir/include/_fallback  $$arcs -F$sdk-I$theosdir/include -I$theosdir/vendor/include -I$theosdir/include/_fallback  -isysroot $sdk -I$DRAGONBUILD/headers/ -o $out $in 

rule debug
    description = Generating Debug Symbols
    command = $${ToolchainPath}dsymutil "$in" 2&> /dev/null; mv $in $out

rule sign
    description = Signing $out
    command = $${ToolchainPath}ldid -S $in; mv $in $target

rule clean
    description = Cleaning Up
    command = rm -rf .dragon/sign

build $prefix : prefix Prefix.h

build $builddir/Tweak.mm : logos Tweak.xm



build $builddir/Tweak.mm.o : compile $builddir/Tweak.mm



build $dsymtarget : link $builddir/Tweak.mm.o 


build $signtarget : debug $dsymtarget

build $target : sign $signtarget

build cleanup : clean $target

default $target

